.button
    display flex
    width 380px 
    height 68px 
    align-items center
    text-align: center
    color white
    font-weight bold
    font-size: 1.2rem
    border-radius 10px

    &__icon
        height 100%
        padding 0.5rem
        border-radius 10px 0 0 10px

    &__text
        width 100%
        display flex
        align-items center
        justify-content center


@media only screen and (max-width: $tablet-medium-screen)
    .button
        width 300px 
        height 50px 
    
    