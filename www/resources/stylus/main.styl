@require 'base/variables'
@require 'base/*'
@require 'components/*'
@require 'pages/*/*'

*
    box-sizing border-box

body
    font-family $font-primary
    color $primary-color
    width 100%
    height max-content
    min-height 100vh
    position relative

img 
    height 100%
    width 100%

.bg-primary
    background-color $primary-color
.bg-primary-dark
    background-color $primary-color-dark

.bg-secondary
    background-color $secondary-color
.bg-secondary-dark
    background-color $secondary-color-dark

.container
    width 100%
    height 100%